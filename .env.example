# Home Assistant Configuration
HA_BASE_URL=http://your-homeassistant-url:8123
HA_WS_URL=ws://your-homeassistant-url:8123/api/websocket
HA_TOKEN=your_home_assistant_token_here

# Database Configuration
DB_HOST=your_database_host
DB_PORT=3306
DB_USERNAME=your_db_username
DB_PASSWORD=your_db_password
DB_NAME=your_database_name

# YouTube Music OAuth
YOUTUBE_ACCESS_TOKEN=your_youtube_access_token
YOUTUBE_REFRESH_TOKEN=your_youtube_refresh_token
YOUTUBE_SCOPE=https://www.googleapis.com/auth/youtube

# GPIO Pin Configuration
DISPLAY_POWER_GPIO=20
DISPLAY_BACKLIGHT_GPIO=18
ROTARY_ENCODER_PIN_A=6
ROTARY_ENCODER_PIN_B=5
RFID_CS_PIN=7
BUTTON_0_GPIO=26
BUTTON_1_GPIO=14
BUTTON_2_GPIO=15
BUTTON_3_GPIO=12
BUTTON_4_GPIO=19
BUTTON_5_GPIO=17

# Hardware Settings
RFID_POLL_INTERVAL=1.0
ENCODER_BOUNCETIME=2
BUTTON_BOUNCETIME=200

# Media Player Configuration
MEDIA_PLAYER_ENTITY_ID=media_player.ytube_music_player

# Application Settings
DEBUG_MODE=false
LOG_LEVEL=INFO
