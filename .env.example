# Subsonic/Navidrome Configuration
SUBSONIC_URL=http://your-subsonic-server:4747
SUBSONIC_USER=your_subsonic_username
SUBSONIC_PASS=your_subsonic_password

# Database Configuration
# SQLite database is used automatically at app/database/album.db
# No additional database configuration needed

# Logging Configuration
LOG_SERVER_HOST=your_syslog_server_ip

# GPIO Pin Configuration
DISPLAY_POWER_GPIO=20
DISPLAY_BACKLIGHT_GPIO=18
ROTARY_ENCODER_PIN_A=6
ROTARY_ENCODER_PIN_B=5
RFID_CS_PIN=7
NFC_CARD_SWITCH_GPIO=19
BUTTON_0_GPIO=26
BUTTON_1_GPIO=14
BUTTON_2_GPIO=15
BUTTON_3_GPIO=12
BUTTON_4_GPIO=19
BUTTON_5_GPIO=17

# Timeout Configuration (seconds)
CHROMECAST_CONNECT_TIMEOUT=10
CHROMECAST_DISCOVERY_TIMEOUT=3
CHROMECAST_WAIT_TIMEOUT=10
MENU_AUTO_EXIT_TIMEOUT=10
HTTP_REQUEST_TIMEOUT=10
SYSTEM_OPERATION_TIMEOUT=5
RFID_THREAD_JOIN_TIMEOUT=1

# Hardware Settings
RFID_POLL_INTERVAL=1.0
RFID_READ_TIMEOUT=5.0
ENCODER_BOUNCETIME=2
BUTTON_BOUNCETIME=200

# Media Player Configuration
MEDIA_PLAYER_ENTITY_ID=media_player.ytube_music_player

# Application Settings
DEBUG_MODE=false
LOG_LEVEL=INFO
